{
	"name": "alfredoramos/mailrelay",
	"type": "phpbb-extension",
	"description": "Mailrelay extension for phpBB",
	"homepage": "https://github.com/AlfredoRamos/phpbb-ext-mailrelay",
	"version": "0.1.0-dev",
	"time": "2020-09-13",
	"keywords": [
		"phpbb",
		"extension",
		"mailrelay",
		"mailrelay-api",
		"email-sync",
		"email-marketing"
	],
	"license": "GPL-2.0-only",
	"authors": [
		{
			"name": "Alfredo Ramos",
			"email": "alfredo.ramos@protonmail.com",
			"homepage": "https://alfredoramos.mx/",
			"role": "Lead Developer"
		}
	],
	"require": {
		"php": "^7.1.3 || ^8.0.0",
		"composer/installers": "^2.0.0",
		"alfredo-ramos/mailrelay-api-client": "^0.1.0"
	},
	"require-dev": {
		"phing/phing": "^2.16.0",
		"pear/archive_tar": "^1.4.0"
	},
	"extra": {
		"display-name": "Mailrelay",
		"soft-require": {
			"phpbb/phpbb": "~3.3.0"
		},
		"version-check": {
			"host": "alfredoramos.mx",
			"directory": "/phpbb-extensions/versions",
			"filename": "mailrelay.json",
			"ssl": true
		}
	},
	"config": {
		"prepend-autoloader": false
	}
}
